<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rect_white_back"
    android:backgroundTint="#F7F7F7"
    android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Sub-address"
        android:textColor="@color/semi_black"
        android:textSize="16sp"
        android:fontFamily="@font/cairo_regular"
        android:id="@+id/sub_address"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="2021 December 22"
        android:textColor="#808080"
        android:textSize="14sp"
        android:fontFamily="@font/cairo_regular"
        android:id="@+id/sub_address_date"/>

    <TextView
        android:id="@+id/notification_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_address"
        android:text="@string/notify"
        android:textSize="14sp"
        android:fontFamily="@font/cairo_regular"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/read_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notification_data"
        android:text="Read more"
        android:textSize="14sp"
        android:fontFamily="@font/cairo_bold"
        android:textColor="@color/blue"
        android:layout_marginTop="5dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>